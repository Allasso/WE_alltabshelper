{
  "manifest_version": 2,
  "name": "All Tabs Helper WE",
  "version": "1.0",
  "description": "All Tabs Helper - WebExtensions version",
  "homepage_url": "http://kevinallasso.org",
  "icons": {
    "32": "icons/ath_icon_64.png",
    "48": "icons/ath_icon_64.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "find",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/ath_icon_64.png",
    "default_title": "All Tabs Helper",
    "default_popup": "tabspopup/ath2tabs_popup.html"
  },
  "background": {
    "scripts": ["background/ath2background_1.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscripts/ath2contentscript_find_highlight.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/button_close_12.png"
  ],
  "sidebar_action": {
    "default_icon": {
      "32": "icons/ath_icon_64.png"
    },
    "default_title": "All Tabs Helper",
    "default_panel": "tabspopup/ath2tabs_popup.html"
  }
}
